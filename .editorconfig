# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80


[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = off


[Makefile]
indent_style = tab
indent_size = 4


[{Dockerfile,Dockerfile.template.erb,Dockerfile.sample,Dockerfile.tmpl.php}]
indent_style = space
indent_size = 4


[{fluent.conf,fluent.conf.erb}]
indent_style = space
indent_size = 2


[{*.bats,post_push,post_push.erb}]
indent_style = space
indent_size = 2


[*.{yml,yaml,json}]
indent_style = space
indent_size = 2


[{*.sh,*.bats,post_push,post_push.tmpl.php}]
indent_style = space
indent_size = 2


[*.php]
indent_style = space
indent_size = 4
